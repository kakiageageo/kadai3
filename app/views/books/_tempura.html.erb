

<h2>User info</h2>

<p><%= image_tag user.get_profile_image(100,100) %></p>
    
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
     
    <%= link_to edit_user_path(user.id) do %>
    
 <div class="border border-dark text-center  mt-5">
    <i class="fa-solid fa-user-cog" style="color: gray;"></i>
</div>
    <% end %>
    
<h2 class="mt-3">New book</h2>
    
<%= form_with model: book do |f| %>
  <label>Title</label><br>

  <%= f.text_field :title, style: "width:100%", class: "mb-3" %><br>

  <label>Opinion</label><br>

  <%= f.text_area :body, style: "width:100%" %><br>

  <%= f.submit 'Create Book', class: "btn btn-success mt-3" %>
<% end %>